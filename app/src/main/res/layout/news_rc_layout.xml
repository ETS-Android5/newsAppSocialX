<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:padding="2dp"
    android:elevation="5sp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_marginBottom="12dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_toLeftOf="@id/news_image"
            >
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-10dp"
                android:layout_weight="10"
                android:orientation="horizontal"
             >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hours_ago"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text=""
                            android:textSize="12sp">

                        </TextView>

                        <TextView
                            android:id="@+id/source_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="BBC News"
                            android:textSize="12sp">

                        </TextView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/news_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dp"
                        android:textStyle="bold"
                        android:layout_weight="2"
                        android:maxLines="2"
                        android:textColor="@color/blue"
                        android:text="Apple admits slowing down older iphones"
                        android:textSize="15sp">

                    </TextView>

                    <TextView
                        android:id="@+id/news_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:layout_weight="3"
                        android:maxLines="2"
                        android:text="customers have long suspected iphones slow down over time.Now, Apple has confirmed some models do"
                        android:textSize="12sp">

                    </TextView>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

        </ImageView>
    </RelativeLayout>


      <!--  <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"

            android:layout_centerVertical="true"
            android:src="@drawable/image"
           android:layout_alignParentEnd="true">-->



</androidx.cardview.widget.CardView>